{
  "security.workspace.trust.untrustedFiles": "open",
  "editor.formatOnSave": false,
  "vim.useSystemClipboard": true,
  // 不要弹 confirm 窗口
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  //"editor.fontFamily": "'CaskaydiaCove Nerd Font', 'Cascadia Mono', 'Source Han Sans CN', '微软雅黑', Consolas, 'Courier New', monospace",

  "editor.fontSize": 18,
  "editor.fontFamily": "'Maple Mono NL NF CN', 'JetBrainsMonoNL Nerd Font'",
  "editor.fontLigatures": true,
  "workbench.startupEditor": "none",
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "python.analysis.diagnosticSeverityOverrides": {
    "reportUnsupportedDunderAll": "none"
  },

  // c++ 格式化设置
  // "C_Cpp.clang_format_style": "{BasedOnStyle: Microsoft, IndentWidth: 4, ColumnLimit: 260}",
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features",
    "editor.tabSize": 2
  },
  // 一些 unicode 的设置
  "editor.unicodeHighlight.allowedLocales": {
    "zh-hans": true,
    "zh-hant": true
  },
  // markdown 的自动补全设置
  "[markdown]": {
    "editor.quickSuggestions": {
      "other": "on",
      "comments": "on",
      "strings": "on"
    }
  },
  "[ahk]": {
    "files.encoding": "utf8bom",
    "editor.quickSuggestions": {
      "other": "on",
      "comments": "on",
      "strings": "on"
    }
  },
  // 光标的动画效果
  "editor.cursorBlinking": "solid",
  "editor.cursorStyle": "line",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.fontFamily": "'Maple Mono NL NF CN', 'JetBrainsMonoNL Nerd Font'",
  "terminal.integrated.fontSize": 17,
  "terminal.integrated.inheritEnv": false,

  "markdown.preview.fontFamily": "'Maple Mono NL NF CN', 'JetBrainsMonoNL Nerd Font'",
  // 自动检测缩进的宽度
  "editor.detectIndentation": false,
  // language specification
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.tabSize": 2
  },
  "[css]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "[jsonc]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[json]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[lua]": {
    "editor.tabSize": 2
  },
  "[javascriptreact]": {
    "editor.tabSize": 2
  },
  "[scss]": {
    "editor.tabSize": 2
  },
  "[java]": {
    "editor.tabSize": 2
  },
  "[vue]": {
    "editor.tabSize": 2
  },
  // 软换行
  "editor.wordWrap": "on",
  // 执行 python 脚本时自动切换到脚本所在目录(但是我实际是没有用到的)
  "python.terminal.executeInFileDir": true,
  // 不要高亮不可见的符号
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.unicodeHighlight.allowedCharacters": {
    "〇": true
  },
  "workbench.colorCustomizations": {
    // "editorCursor.foreground": "#16C60C",
    "editorCursor.foreground": "#ffb6c1",
    // "editorCursor.foreground": "#ffffff",
    "editor.lineHighlightBackground": "#292e42",
    // 状态栏颜色设置
    "statusBar.background": "#1e1e1e",
    "statusBar.foreground": "#9b9b8f",
    "statusBar.border": "#333a48"
  },
  "editor.minimap.autohide": true,
  // 在滚动中不要隐藏当前光标的位置
  "editor.hideCursorInOverviewRuler": false,
  "editor.scrollbar.horizontal": "visible",
  "editor.scrollbar.vertical": "visible",
  // "editor.scrollbar.verticalScrollbarSize": 0, // hide the vertical scroll bar
  // "editor.scrollbar.horizontalScrollbarSize": 0, // hide the horizontal scroll bar
  // 标题栏的一些快捷图标
  "workbench.layoutControl.enabled": false,
  // 只背景高亮当前行，但是不高亮行号
  "editor.renderLineHighlight": "line",
  // 高亮当前光标所在的单词以及同名的单词
  "editor.occurrencesHighlight": "singleFile",
  // 高亮选中内容
  "editor.selectionHighlight": false,
  // vim settings
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-p>": false,
    "<C-w>": false
  },

  "vim.autoSwitchInputMethod.enable": true,
  "vim.cursorStylePerMode.insert": "line-thin",
 
  "vim.smartRelativeLine": true,
  "vim.highlightedyank.enable": true,

  // windows 
  // "vim.autoSwitchInputMethod.defaultIM": "1033",
  // "vim.autoSwitchInputMethod.obtainIMCmd": "D:\\lawrence\\im-select.exe",
  // "vim.autoSwitchInputMethod.switchIMCmd": "D:\\lawrence\\im-select.exe {im}",
  // mac
  "vim.autoSwitchInputMethod.defaultIM": "com.apple.keylayout.ABC",
  "vim.autoSwitchInputMethod.obtainIMCmd": "/usr/local/bin/im-select",
  "vim.autoSwitchInputMethod.switchIMCmd": "/usr/local/bin/im-select {im}",

  "vim.camelCaseMotion.enable": true,
  "vim.normalModeKeyBindings": [
    {
      "before": [
        "leader",
        "e"
      ],
      "commands": [
        {
          "command": "workbench.action.toggleSidebarVisibility"
        }
      ]
    },
    // 格式化代码
    {
      "before": [
        "leader",
        "l",
        "f"
      ],
      "commands": [
        {
          "command": "editor.action.formatDocument"
        }
      ]
    },
    // 只有在当前文件是在左边的 explorer 中时才有效
    {
      "before": [
        "leader",
        "f"
      ],
      "commands": [
        {
          "command": "revealInExplorer"
        }
      ]
    },
    {
      "before": [
        "leader",
        "h"
      ],
      "commands": [
        ":noh"
      ]
    },
    {
      "before": [
        "leader",
        "c"
      ],
      "commands": [
        ":q"
      ]
    },
    {
      "before": [
        "leader",
        "v"
      ],
      "commands": [
        ":q"
      ]
    },
    // 保存，但不格式化
    {
      "before": [
        "leader",
        "w"
      ],
      "commands": [
        "workbench.action.files.saveWithoutFormatting"
      ]
    },
    {
      "before": [
        "leader",
        "leader",
        "q"
      ],
      "commands": [
        {
          "command": "workbench.action.closeWindow"
        }
      ]
    },
    // 关闭 VSCode
    {
      "before": [
        "leader",
        "q",
        "q"
      ],
      "commands": [
        {
          "command": "workbench.action.closeWindow"
        }
      ]
    },
    // 关闭当前的 tab
    {
      "before": [
        "leader",
        "c"
      ],
      "commands": [
        {
          "command": "workbench.action.closeEditorInAllGroups"
        }
      ]
    },
    // 控制左侧的活动栏的显示和隐藏
    {
      "before": [
        "leader",
        "a"
      ],
      "commands": [
        {
          "command": "workbench.action.toggleActivityBarVisibility"
        }
      ]
    },
    // 控制底部 status 的显示和隐藏
    {
      "before": [
        "leader",
        "b"
      ],
      "commands": [
        {
          "command": "workbench.action.toggleStatusbarVisibility"
        }
      ]
    },
    {
      "before": [
        "leader",
        "p",
        "y"
      ],
      "commands": [
        "workbench.action.files.saveAll",
        {
          "command": "workbench.action.terminal.sendSequence",
          "args": {
            "text": "clear \u000D"
          }
        },
        "workbench.action.terminal.focus",
        {
          "command": "workbench.action.terminal.sendSequence",
          "args": {
            "text": "python '${file}'\u000D"
          }
        },
        "workbench.action.focusActiveEditorGroup"
      ]
    },
    {
      "before": [
        "leader",
        "r",
        "u"
      ],
      "commands": [
        "workbench.action.files.saveAll",
        {
          "command": "workbench.action.terminal.sendSequence",
          "args": {
            "text": "clear \u000D"
          }
        },
        "workbench.action.terminal.focus",
        {
          "command": "workbench.action.terminal.sendSequence",
          "args": {
            "text": "ruby '${file}'\u000D"
          }
        },
        "workbench.action.focusActiveEditorGroup"
      ]
    },
    // autohotkey
    {
      "before": [
        "leader",
        "k",
        "k"
      ],
      "commands": [
        "workbench.action.files.saveAll",
        {
          "command": "workbench.action.terminal.sendSequence",
          "args": {
            "text": "clear \u000D"
          }
        },
        "workbench.action.terminal.focus",
        {
          "command": "workbench.action.terminal.sendSequence",
          "args": {
            "text": "${file} \u000D"
          }
        },
        "workbench.action.focusActiveEditorGroup"
      ]
    },
    // 在 terminal 中执行 haskell 程序
    {
      "before": [
        "leader",
        "r",
        "h"
      ],
      "commands": [
        "workbench.action.files.saveAll",
        {
          "command": "workbench.action.terminal.sendSequence",
          "args": {
            "text": "clear \u000D"
          }
        },
        "workbench.action.terminal.focus",
        {
          "command": "workbench.action.terminal.sendSequence",
          "args": {
            "text": "runhaskell ${file} \u000D"
          }
        },
        "workbench.action.focusActiveEditorGroup"
      ]
    },
    {
      "before": [
        "leader",
        "g",
        "g"
      ],
      "commands": [
        {
          "command": "workbench.action.quickOpen"
        }
      ]
    },
    {
      "before": [
        "leader",
        "g",
        "f"
      ],
      "commands": [
        {
          "command": "workbench.view.search"
        }
      ]
    },
    // run java codes
    {
      "before": [
        "leader",
        "j",
        "a"
      ],
      "commands": [
        {
          "command": "java.debug.runJavaFile"
        }
      ]
    },
    {
      "before": [
        "leader",
        "r"
      ],
      "commands": [
        {
          "command": "workbench.action.debug.start"
        }
      ]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": [
        ">"
      ],
      "commands": [
        "editor.action.indentLines"
      ]
    },
    {
      "before": [
        "<"
      ],
      "commands": [
        "editor.action.outdentLines"
      ]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "u"
      ],
      "commands": [
        "undo"
      ]
    },
    {
      "before": [
        "C-r"
      ],
      "commands": [
        "redo"
      ]
    }
  ],
  // vim 的 easymotion 插件的高亮字符的前景色
  "vim.easymotionMarkerForegroundColorOneChar": "#DF5452",
  // 关闭 snippet 的阻止快速建议的行为
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  // 代码区域的竖直和水平的高亮条显示
  "editor.guides.bracketPairs": true,
  "editor.guides.bracketPairsHorizontal": false,
  "editor.bracketPairColorization.enabled": true,
  // 开启 vim-surround
  "vim.surround": true,
  // 扩展忽视建议
  "extensions.ignoreRecommendations": true,
  // cmake 配置
  "cmake.configureOnOpen": false,
  "cmake.showOptionsMovedNotification": false,
  "cmake.automaticReconfigure": false,
  "cmake.pinnedCommands": [
    "workbench.action.tasks.configureTaskRunner",
    "workbench.action.tasks.runTask"
  ],
  // 在编辑的时候自动配置
  "cmake.configureOnEdit": false,
  // 编辑器内联的建议
  "editor.inlineSuggest.enabled": true,
  // 关闭 terminal 中的多行粘贴的警告
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  // 窗口的缩放程度
  "window.zoomLevel": 0.5,
  // 关闭不明 unicode 字符的高亮
  "editor.unicodeHighlight.ambiguousCharacters": false,
  // 关闭语法验证
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  // hidden breadcrumbs in editors
  "breadcrumbs.enabled": false,
  // 渲染 white space
  "editor.renderWhitespace": "all",
  // 标签栏的 close 图标的可见性
  "workbench.editor.tabActionCloseVisibility": true,
  // menu bar 相关
  "window.menuBarVisibility": "hidden",
  // 按住 alt 时 memu bar 的下划线
  "window.enableMenuBarMnemonics": false,
  // 按住 alt 时切换焦点到 menu bar
  "window.customMenuBarAltFocus": false,
  // 修改窗口的风格为自绘风格
  "window.titleBarStyle": "custom",
  "window.dialogStyle": "custom",
  "window.title": "🤖 📚 ✏️ 🧑🏻‍💻 💡 ️${dirty}${activeEditorMedium}${separator}${rootName}",
  "terminal.integrated.defaultProfile.linux": "fish",
  // 作用域的顶部给 sticky 住
  "editor.stickyScroll.enabled": false,
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.smoothScrolling": true,
  "terminal.external.linuxExec": "kitty",
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.iconTheme": "catppuccin-mocha",
  // 使单击就可以在新标签页中打开文件
  "workbench.editor.enablePreview": false,
  "editor.cursorSmoothCaretAnimation": "on",
  // 在 hyprland 中，窗口内全屏不会出问题
  "window.experimentalControlOverlay": false,
  // 控制中心
  "window.commandCenter": false,
  // html 标签重命名会同步进行
  "editor.linkedEditing": true,
  // 输入法相关
  "editor.experimentalEditContextEnabled": true,
  "C_Cpp.intelliSenseEngine": "disabled",
  "[snippets]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "files.associations": {
    "*.code-snippets": "json"
  },
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },

  "workbench.list.automaticKeyboardNavigation": false,

  "vscode_custom_css.imports": [
    "file:///home/sonnycalcr/EDisk/CSSCodes/custom.css"
  ]
}

